<% content_for :head do -%>
  <%= stylesheet_pack_tag 'login' %>
  <%= javascript_pack_tag 'login' %>
<% end %>
<div id="app">
  <div class="login-container">
    <form class="login-form">
      <div class="title-container">
        <h3 class="title">Login Form</h3>
      </div>
      <div class="el-form-item is-error is-required">
        <div class="form-item-content">
          <span class="svg-container">
          <svg data-v-4342976c="" data-v-1399390a="" aria-hidden="true" class="svg-icon">
          <use data-v-4342976c="" href="#icon-user"></use>
          </svg>
          </span> 
          <div class="el-input">
          <input tabindex="1" type="text" autocomplete="on" placeholder="Username" name="username" class="el-input__inner">
          </div>
          <div class="el-form-item__error">
            Please enter the correct user name
          </div>
        </div>
      </div>
    </form>
  </div>
</div>